    <DataTemplate DataType="{x:Type viewModel:AddSeasonViewModel}">
        <Border Height="300" Width="500" CornerRadius="25" Padding="20" Background="#f7f6f4">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition Height="2*"/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBox Grid.Row="2" Text="{Binding Number}" IsReadOnly="True" materialDesign:HintAssist.Hint="Season Number"/>

                <ComboBox Grid.Row="3" ItemsSource="{Binding Serials}"  SelectedItem="{Binding Season.Serial, UpdateSourceTrigger=PropertyChanged}">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Name}"/>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>

                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="SelectionChanged">
                            <i:InvokeCommandAction Command="{Binding SelectedSerialChangedCommand}" />
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                </ComboBox>

                <Button Grid.Row="9" Grid.Column="1" VerticalAlignment="Top" Command="{Binding SaveCommand}">Save</Button>

            </Grid>
        </Border>
    </DataTemplate>

    <DataTemplate DataType="{x:Type viewModel:AddEpisodeViewModel}">
        <Border Height="700" Width="1100" CornerRadius="25" Padding="20" Background="#f7f6f4">
            <Grid >

                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <ComboBox ItemsSource="{Binding Serials}" SelectedItem="{Binding Serial, UpdateSourceTrigger=PropertyChanged}">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Name}"/>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>

                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="SelectionChanged">
                            <i:InvokeCommandAction Command="{Binding SelectedSerialChangedCommand}" />
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                </ComboBox>

                <ComboBox Grid.Column="1" ItemsSource="{Binding Seasons}" SelectedItem="{Binding Season, UpdateSourceTrigger=PropertyChanged}">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Number}"/>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>

                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="SelectionChanged">
                            <i:InvokeCommandAction Command="{Binding SelectedSeasonChangedCommand}" />
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                </ComboBox>

                <TextBox Grid.Row="1" Text="{Binding Number}" IsReadOnly="True" materialDesign:HintAssist.Hint="Name"/>
                <TextBox Grid.Row="2" Text="{Binding Episode.Name}" materialDesign:HintAssist.Hint="Name"/>
                <TextBox Grid.Row="3" Text="{Binding Episode.Description}" materialDesign:HintAssist.Hint="Year"/>
                <TextBox Grid.Row="4" Text="{Binding Episode.VideoLength}" materialDesign:HintAssist.Hint="Age"/>

                <Button Grid.Row="5" Command="{Binding OpenVideoDialogCommand}">SearchImageUrl</Button>
                <ProgressBar Grid.Row="5" Grid.Column="1" Height="30" Margin="5" Value="{Binding VideoProgress, Mode=TwoWay}" Minimum="0" Maximum="100"/>

                <Button Grid.Row="6" Command="{Binding OpenVideoImageDialogCommand}">SearchImageUrl</Button>
                <ProgressBar Grid.Row="7" Grid.Column="1" Height="30" Margin="5" Value="{Binding VideoImageProgress.Progress, Mode=TwoWay}" Minimum="0" Maximum="100"/>

                <Button Grid.Row="7" VerticalAlignment="Top" Command="{Binding CancelCommand}">Cancel</Button>
                <Button Grid.Row="7" Grid.Column="1" VerticalAlignment="Top" Command="{Binding SaveCommand}">Save</Button>

            </Grid>
        </Border>
    </DataTemplate>

