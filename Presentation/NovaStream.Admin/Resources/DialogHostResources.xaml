                    xmlns:sys="clr-namespace:System;assembly=mscorlib"
                    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
                    xmlns:viewModel="clr-namespace:NovaStream.Admin.ViewModels.DialogHosts">

    <DataTemplate DataType="{x:Type viewModel:AddMovieViewModel}">
        <Border Background="{StaticResource RootBorderBgColor}" CornerRadius="7" Height="600" Width="1100">
            <Grid>

                <Grid.RowDefinitions>
                    <RowDefinition Height="70"/>
                    <RowDefinition Height="6*"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <Border  Background="{StaticResource AppColor}" CornerRadius="5 5 0 0" Grid.ColumnSpan="2">
                    <DockPanel Margin="20, 10">
                        <Button Command="{x:Static materialDesign:DialogHost.CloseDialogCommand}" IsEnabled="{Binding ProcessStarted, Converter={StaticResource InvertBooleanConverter}}"
                            Style="{StaticResource CloseDialogButton}" DockPanel.Dock="Right"/>
                        <TextBlock Text="Movie Details" Foreground="{StaticResource ForegroundAppColor}" Margin="10"
                           FontFamily="Calibri" FontSize="24" FontWeight="SemiBold" VerticalAlignment="Center"/>
                    </DockPanel>
                </Border>

                <Border Background="{StaticResource ForegroundAppColor}" CornerRadius="7" Margin="20" Grid.Row="1" Grid.Column="0">
                    <Grid>

                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="1.5*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>

                        <TextBox Text="{Binding Movie.Name}" materialDesign:HintAssist.Hint="Name" IsReadOnly="{Binding IsEdit}" IsEnabled="{Binding ProcessStarted, Converter={StaticResource InvertBooleanConverter}}" Style="{StaticResource InputTextBox}" Grid.Column="0"/>

                        <TextBox Text="{Binding Movie.Year}" materialDesign:HintAssist.Hint="Year" IsEnabled="{Binding ProcessStarted, Converter={StaticResource InvertBooleanConverter}}" Style="{StaticResource InputTextBox}" Grid.Column="1"/>

                        <ComboBox SelectedValue="{Binding Movie.Age, UpdateSourceTrigger=PropertyChanged}" materialDesign:HintAssist.Hint="Age" IsEnabled="{Binding ProcessStarted, Converter={StaticResource InvertBooleanConverter}}" Style="{StaticResource InputComboBox}" Grid.Column="2">
                            <ComboBox.ItemsSource>
                                <x:Array Type="{x:Type sys:Int32}">
                                    <sys:Int32>3</sys:Int32>
                                    <sys:Int32>6</sys:Int32>
                                    <sys:Int32>7</sys:Int32>
                                    <sys:Int32>8</sys:Int32>
                                    <sys:Int32>9</sys:Int32>
                                    <sys:Int32>10</sys:Int32>
                                    <sys:Int32>11</sys:Int32>
                                    <sys:Int32>12</sys:Int32>
                                    <sys:Int32>13</sys:Int32>
                                    <sys:Int32>14</sys:Int32>
                                    <sys:Int32>15</sys:Int32>
                                    <sys:Int32>16</sys:Int32>
                                    <sys:Int32>17</sys:Int32>
                                    <sys:Int32>18</sys:Int32>
                                </x:Array>
                            </ComboBox.ItemsSource>
                        </ComboBox>

                        <TextBox Text="{Binding Movie.Description}" materialDesign:HintAssist.Hint="Description" IsEnabled="{Binding ProcessStarted, Converter={StaticResource InvertBooleanConverter}}" Style="{StaticResource InputTextArea}" Grid.Row="1" Grid.ColumnSpan="3"/>

                        <DockPanel Margin="10" Grid.Row="2" Grid.ColumnSpan="3">
                            <Button Content="{materialDesign:PackIcon Kind=Paperclip}" Command="{Binding OpenTrailerDialogCommand}" Style="{StaticResource FileDialogButton}" DockPanel.Dock="Right"/>
                            <materialDesign:Card Style="{StaticResource CircularProgressBarCard}" DockPanel.Dock="Right">
                                <ProgressBar Value="{Binding Movie.TrailerProgress.Progress}" Style="{StaticResource CircularProgressBar}"/>
                            </materialDesign:Card>
                            <TextBox Text="{Binding Movie.TrailerUrl}" materialDesign:HintAssist.Hint="Trailer Path" IsReadOnly="True" IsEnabled="{Binding ProcessStarted, Converter={StaticResource InvertBooleanConverter}}" Margin="0 0 10 0" Style="{StaticResource InputTextBox}"/>
                        </DockPanel>

                        <DockPanel Margin="10" Grid.Row="3" Grid.ColumnSpan="3">
                            <Button Content="{materialDesign:PackIcon Kind=Paperclip}" Command="{Binding OpenImageDialogCommand}" Style="{StaticResource FileDialogButton}" DockPanel.Dock="Right"/>
                            <materialDesign:Card Style="{StaticResource CircularProgressBarCard}" DockPanel.Dock="Right">
                                <ProgressBar Value="{Binding Movie.ImageProgress.Progress}" Style="{StaticResource CircularProgressBar}"/>
                            </materialDesign:Card>
                            <TextBox Text="{Binding Movie.ImageUrl}" materialDesign:HintAssist.Hint="Image Path" IsReadOnly="True" IsEnabled="{Binding ProcessStarted, Converter={StaticResource InvertBooleanConverter}}" Margin="0 0 10 0" Style="{StaticResource InputTextBox}"/>
                        </DockPanel>

                        <DockPanel Margin="10" Grid.Row="4" Grid.ColumnSpan="3">
                            <Button Content="{materialDesign:PackIcon Kind=Paperclip}" Command="{Binding OpenSearchImageDialogCommand}" Style="{StaticResource FileDialogButton}" DockPanel.Dock="Right"/>
                            <materialDesign:Card Style="{StaticResource CircularProgressBarCard}" DockPanel.Dock="Right">
                                <ProgressBar Value="{Binding Movie.SearchImageProgress.Progress}" Style="{StaticResource CircularProgressBar}"/>
                            </materialDesign:Card>
                            <TextBox Text="{Binding Movie.SearchImageUrl}" materialDesign:HintAssist.Hint="Search Image Path" IsReadOnly="True" IsEnabled="{Binding ProcessStarted, Converter={StaticResource InvertBooleanConverter}}" Margin="0 0 10 0" Style="{StaticResource InputTextBox}"/>
                        </DockPanel>

                    </Grid>
                </Border>

                <Border Margin="0 20 20 20" Grid.Row="1" Grid.Column="1">
                    <Grid>

                        <Grid.RowDefinitions>
                            <RowDefinition Height="80"/>
                            <RowDefinition />
                        </Grid.RowDefinitions>

                        <Border Background="{StaticResource ForegroundAppColor}" CornerRadius="7" Margin="0 0 0 10" Grid.Row="0">
                            <ComboBox ItemsSource="{Binding Directors}" SelectedItem="{Binding Movie.Director, UpdateSourceTrigger=PropertyChanged}" Margin="10 3"
                              materialDesign:HintAssist.Hint="Director" IsEnabled="{Binding ProcessStarted, Converter={StaticResource InvertBooleanConverter}}" Style="{StaticResource InputComboBox}">
                                <ComboBox.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="{Binding Id, StringFormat={}{0:00000}}"/>
                                            <TextBlock Text=" - "/>
                                            <TextBlock Text="{Binding Name}"/>
                                            <TextBlock Text=" "/>
                                            <TextBlock Text="{Binding Surname}"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </ComboBox.ItemTemplate>
                            </ComboBox>
                        </Border>

                        <Border Background="{StaticResource ForegroundAppColor}" CornerRadius="7" Grid.Row="1">
                            <Grid>

                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="1.5*"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>

                                <TextBox Text="{Binding Movie.VideoName}" materialDesign:HintAssist.Hint="Video Name" IsEnabled="{Binding ProcessStarted, Converter={StaticResource InvertBooleanConverter}}" Style="{StaticResource InputTextBox}" Grid.Column="0"/>

                                <TextBox Text="{Binding Movie.VideoLength}" materialDesign:HintAssist.Hint="Video Length" IsEnabled="{Binding ProcessStarted, Converter={StaticResource InvertBooleanConverter}}" Style="{StaticResource InputTextBox}" Grid.Column="1"/>

                                <TextBox Text="{Binding Movie.VideoDescription}" materialDesign:HintAssist.Hint="Video Description" IsEnabled="{Binding ProcessStarted, Converter={StaticResource InvertBooleanConverter}}" Style="{StaticResource InputTextArea}" Grid.Row="1" Grid.ColumnSpan="2"/>

                                <DockPanel Margin="10" Grid.Row="2" Grid.ColumnSpan="2">
                                    <Button Content="{materialDesign:PackIcon Kind=Paperclip}" Command="{Binding OpenVideoDialogCommand}" Style="{StaticResource FileDialogButton}" DockPanel.Dock="Right"/>
                                    <materialDesign:Card Style="{StaticResource CircularProgressBarCard}" DockPanel.Dock="Right">
                                        <ProgressBar Value="{Binding Movie.VideoProgress}" Style="{StaticResource CircularProgressBar}"/>
                                    </materialDesign:Card>
                                    <TextBox Text="{Binding Movie.VideoUrl}" materialDesign:HintAssist.Hint="Video Path" IsReadOnly="True" IsEnabled="{Binding ProcessStarted, Converter={StaticResource InvertBooleanConverter}}" Margin="0 0 10 0"  Style="{StaticResource InputTextBox}"/>
                                </DockPanel>

                                <DockPanel Margin="10" Grid.Row="3" Grid.ColumnSpan="2">
                                    <Button Content="{materialDesign:PackIcon Kind=Paperclip}" Command="{Binding OpenVideoImageDialogCommand}" Style="{StaticResource FileDialogButton}" DockPanel.Dock="Right"/>
                                    <materialDesign:Card Style="{StaticResource CircularProgressBarCard}" DockPanel.Dock="Right">
                                        <ProgressBar Value="{Binding Movie.VideoImageProgress.Progress}" Style="{StaticResource CircularProgressBar}"/>
                                    </materialDesign:Card>
                                    <TextBox Text="{Binding Movie.VideoImageUrl}" materialDesign:HintAssist.Hint="Video Image Path" IsReadOnly="True" IsEnabled="{Binding ProcessStarted, Converter={StaticResource InvertBooleanConverter}}" Margin="0 0 10 0" Style="{StaticResource InputTextBox}"/>
                                </DockPanel>

                            </Grid>
                        </Border>

                    </Grid>
                </Border>

                <Border Background="{StaticResource ForegroundAppColor}" CornerRadius="7" Margin="20 0 20 20" Grid.Row="2" Grid.ColumnSpan="2">
                    <UniformGrid Columns="2" VerticalAlignment="Center">
                        <Button Content="Cancel" Command="{Binding CancelCommand}" IsEnabled="{Binding ProcessStarted}" Style="{StaticResource SaveCancelButton}"/>
                        <Button Content="Save" Command="{Binding SaveCommand}" IsEnabled="{Binding ProcessStarted, Converter={StaticResource InvertBooleanConverter}}" Style="{StaticResource SaveCancelButton}"/>
                    </UniformGrid>
                </Border>

            </Grid>
        </Border>
    </DataTemplate>

